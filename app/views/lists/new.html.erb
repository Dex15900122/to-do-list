<%= form_for @list, :url => lists_path do |f| %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>

    <%= f.label :duedate, "DueDate" %>
    <%= f.text_field :duedate %>

    <%= f.label :note, "Note" %>
    <%= f.text_area :note %>

    <%= f.submit "Create" %>
<% end %>

<% if @list.errors.present? %>
  <ul>
    <% @list.errors.each do |error, message| %>
      <li> <%= "#{error.capitalize}  #{message}" %></li>
    <% end %>
  </ul>
<% end %>
    