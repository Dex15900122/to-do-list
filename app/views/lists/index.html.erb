<div class="col-md-12">
  <div class="group">    
    <%= link_to 'New List', new_list_path,class: "btn btn-primary pull-right" %>     
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        
      </tr>
    <thead>
    <tbody>
      <table class="table table-condensed">
       
        <% @lists.each do |list| %>
          <tr>
            
            <td><%= list.name %></td>
            <td><%= list.duedate %></td>
            <td><%= list.note %></td>
            <td>
            <%= link_to 'edit', edit_list_path(list) ,class: "btn btn-sm btn-default" %>
            <span class="glyphicon glyphicon-edit"></span>
            <%= link_to 'Destroy', list_path(list) ,class: "btn btn-sm btn-default", method: :delete, data:{ confirm: "Are you sure?" } %>
            <span class="glyphicon glyphicon-edit"></span>
            </td> 
          </tr>
        <% end %>
      </table>
    </tbody>  
  </table>  

  

</div>

  